#:kivy 2.1.0

BoxLayoutKukuk:


<BoxLayoutKukuk>:
    orientation: "vertical"

    canvas.before:
        # Background image
        Rectangle:
            size: self.size
            source: 'images/roodKleed.jpg'
    
    Label:
        # Clock
        id: kuku_time
        text: '00:00:00'
        size_hint: 1, .9
        font_size: "30dp"
    
    Label:
        # Kukuk!
        id: kukuk
        text: ""  # to be replaced with 'ku kuk!' or image

    Label:
        # Kukuk logo
        id: logo
        text: "kukuk"
        size_hint: .5, .5
        font_size: "30dp"
        bold: True
        italic: True
